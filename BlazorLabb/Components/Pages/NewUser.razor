@page "/newuser"
@rendermode InteractiveServer
@using BlazorLabb.Models

<PageTitle>New User</PageTitle>

<h1>New User</h1>

<EditForm Model="_newUser" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    @if (!_newUserSaved)
    {
        <p>Add a new user:</p>
        <div>
            <InputText class="newUserInput" placeholder="Name" @bind-Value="_newUser.Name" />

            <InputText class="newUserInput" placeholder="E-mail" @bind-Value="_newUser.Email" />

            <InputText class="newUserInput" placeholder="Street" @bind-Value="_newUser.Address.Street" />

            <InputText class="newUserInput" placeholder="City" @bind-Value="_newUser.Address.City" />

            <InputText class="newUserInput" placeholder="ZIP Code" @bind-Value="_newUser.Address.ZipCode" />

            <InputText class="newUserInput" placeholder="Company Name" @bind-Value="_newUser.Company.Name" />

            <InputText class="newUserInput" placeholder="Company Catchpharse" @bind-Value="_newUser.Company.Catchphrase" />
        </div>

        <button type="submit">Save New User</button>
    }
    else
    {
        <p style="color: green">You have saved the following user:</p>
        <p>Name: @_newUser.Name</p>
        <p>E-Mail: @_newUser.Email</p>
        <p>Street: @_newUser.Address.Street</p>
        <p>City: @_newUser.Address.City</p>
        <p>ZIP Code: @_newUser.Address.ZipCode</p>
        <p>Company Name: @_newUser.Company.Name</p>
        <p>Company Catchpharse: @_newUser.Company.Catchphrase</p>
    }    

</EditForm>

@code {
    private User _newUser = new User();
    private bool _newUserSaved = false;

    private void HandleSubmit()
    {
        _newUserSaved = true;
    }

    //To do: Lägg till en ny skapad user till dina local skapade users...
}